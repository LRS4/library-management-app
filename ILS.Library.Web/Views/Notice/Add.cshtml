@model ILS.Library.Web.Models.Notices.NoticeModel;
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add a notice</h1>

<form method="post" asp-controller="Notice" asp-action="Add">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input type="text" class="form-control" asp-for="Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content">Content</label>
        <input type="text" class="form-control" asp-for="Content">
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="ValidFrom" class="col-2 col-form-label">Valid From</label>
        <div class="col-10">
            <input class="form-control"
                   type="datetime-local"
                   value="@string.Format("{0:yyyy-MM-dd}T{0:HH:mm}", DateTime.Now.ToLocalTime())"
                   asp-for="ValidFrom">
            <span asp-validation-for="ValidFrom" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ValidTo" class="col-2 col-form-label">Valid To</label>
        <div class="col-10">
            <input class="form-control"
                   type="datetime-local"
                   value="@string.Format("{0:yyyy-MM-dd}T{0:HH:mm}", DateTimeOffset.Now.ToLocalTime())"
                   asp-for="ValidTo">
            <span asp-validation-for="ValidTo" class="text-danger"></span>
        </div>
    </div>
    <button class="btn btn-primary" type="submit">
        Add notice
    </button>
</form>